  <div class="filters">
    <button type="submit" class="btn btn-white btn-submit-filter">DATES</button>
    <button type="submit" class="btn btn-white btn-submit-filter">PRICE</button>
    <button type="submit" class="btn btn-white btn-submit-filter">GUESTS</button>
    <button type="submit" class="btn btn-white btn-submit-filter">MORE FILTERS</button>

    <div class="pointer-container">
    <button type="submit" class= "pointer-next" id="pointer"><%= link_to "I WANT A VENUE", venues_path %></button>
    <button type="submit" class= "pointer-next" id="pointer"><%= link_to "I WANT A CATERER", caterings_path %></button>
    <button type="submit" class= "pointer-next" id="pointer"><%= link_to "I WANT AN EXTRA", bookings_path %></button>
    </div>

  </div>

  <div class="horizontal-line-for-filters"></div>
<div class="index-container slideshow-container">

  <div class="listings">
    <% @venues.each do |venue| %>
    <%= link_to venue_path(venue) do %>

    <div class="venue-card">

      <div id="carouselExampleIndicators-<%= venue.id %>" class="carousel slide" data-ride="carousel" data-interval="false">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators-<%= venue.id %>" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators-<%= venue.id %>" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators-<%= venue.id %>" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100 " src="qssets/living-room-1.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="assets/living-room-2.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="assets/living-room-3.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators-<%= venue.id %>" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators-<%= venue.id %>" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="card-product-info">
          <h2><%= venue.name %></h2>
          <h3><%= venue.capacity %> Guests</h3>
          <p>$<%= venue.price_per_hour %>/hr</p>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
  <div class="map-container">
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
