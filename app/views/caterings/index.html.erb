<div class="filters">
  <button type="submit" class="btn btn-white btn-submit-filter">DATES</button>
  <button type="submit" class="btn btn-white btn-submit-filter">GUESTS</button>
  <button type="submit" class="btn btn-white btn-submit-filter">MORE FILTERS</button>
</div>
<div class="horizontal-line-for-filters"></div>

<div class="index-container slideshow-container">
  <div class="listings">
    <% @caterings.each do |catering| %>
    <%= link_to catering_path(catering) do %>

    <div class="venue-card catering-card">
      <div id="carouselExampleIndicators-<%= catering.id %>" class="carousel slide" data-ride="carousel" data-interval="false">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators-<%= catering.id %>" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators-<%= catering.id %>" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators-<%= catering.id %>" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="assets/italian-1.jpg" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="assets/italian-2.jpg" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="assets/italian-3.jpg" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators-<%= catering.id %>" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators-<%= catering.id %>" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="card-product-info">
        <h2><%= catering.name %></h2>
        <h3><%= catering.catering_type %></h3>
        <p>$<%= catering.description %></p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>

  <div class="color-container" id="color"></div>
</div>

